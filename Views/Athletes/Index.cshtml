<!DOCTYPE html>
<html>
<head>
    <title>Simple Map</title>
    <meta name="viewport" content="initial-scale=1.0">
    <meta charset="utf-8">
    <style>
        /* Always set the map height explicitly to define the size of the div
        * element that contains the map. */
        #map {
            height: 400px;
            margin: Auto;
            width: 700px;
        }
        /* Optional: Makes the sample page fill the window. */
        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
        }
    </style>
    <br />
    <div class="row">
    <div id="map"></div>
    <script>
      var map;
        function initMap() {
            map = new google.maps.Map(document.getElementById('map'), {
                center: { lat: 43.038902, lng: -87.906471 },
                zoom: 12
            });
            var markerMarquetteU = new google.maps.marker({
                position: { lat:43.038223, lng:-87.929756 },
                map: map
            });
            var markerUMW = new google.maps.marker({
                position: { lat: 43.077980, lng: -87.881813 },
            });
            var markerUW = new google.maps.marker({
                position: { lat: 43.073929, lng: -89.385239},
            });

            var contentStringForUniveristys = '<div id="content">' +
                                             '<div id="siteNotice">' +
                                             '</div>' +
                                             '<h1 id="firstHeading" class="firstHeading">Uluru</h1>' +
                                             '<div id="bodyContent">' +
                                             '<p><b>Uluru</b>, also referred to as <b>Ayers Rock</b>, is a large ' +
                                             'sandstone rock formation in the southern part of the ' +
                                             'Northern Territory, central Australia. It lies 335&#160;km (208&#160;mi) ' +
                                             'south west of the nearest large town, Alice Springs; 450&#160;km ' +
                                             '(280&#160;mi) by road. Kata Tjuta and Uluru are the two major ' +
                                             'features of the Uluru - Kata Tjuta National Park. Uluru is ';
             var infowindowForUniveristys = new google.maps.InfoWindow({
                content: contentStringForUniveristys
             });
             markerMarquetteU.addListener('mouseover', function() {
                 infowindowForUniveristys.open(map, markerMarquetteU);
             });
             markerUWM.addListener('mouseover', function() {
                 infowindowForUniveristys.open(map, markerUW);
             });
             markerUW.addListener('mouseover', function() {
                 infowindowForUniveristys.open(map, markerUW);
             });


        }
    </script>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBUNHs1lR_sP4xwaiZ9JTCVyUV0Ah9lrM8&callback=initMap"
            async defer></script>
</div>